    <script>
        // JavaScript: Dynamic functionality

        // Sample product data (fixed image URLs and removed non-HTML/JS artifacts)
        let products = [
            {
                id: 1,
                name: "Matte Lipstick Set",
                category: "makeup",
                price: 2499,
                image: "https://images.unsplash.com/photo-1596462502278-27bfdc403348?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8bGlwc3RpY2t8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
            },
            {
                id: 2,
                name: "Wireless Earbuds",
                category: "mobile",
                price: 5999,
                image: "https://images.unsplash.com/photo-1590658268037-6bf12165a8df?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8ZWFyYnVkc3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60"
            },
            {
                id: 3,
                name: "Ceramic Cookware Set",
                category: "kitchen",
                price: 8999,
                image: "https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8a2l0Y2hlbiUyMGNvb2t3YXJlfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60"
            },
            {
                id: 4,
                name: "Face Moisturizer",
                category: "skincare",
                price: 3250,
                image: "https://images.unsplash.com/photo-1556228720-dcaa04df84a4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8c2tpbmNhcmV8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
            },
            {
                id: 5,
                name: "Smart Home Hub",
                category: "home",
                price: 12999,
                image: "https://images.unsplash.com/photo-1558618666-fcd25c85cd64?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8c21hcnQlMjBob21lfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60"
            },
            {
                id: 6,
                name: "Premium Notebook Set",
                category: "stationery",
                price: 1875,
                image: "https://images.unsplash.com/photo-1531346680769-a3c111ae6fca?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8bm90ZWJvb2t8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
            },
            {
                id: 7,
                name: "Phone Case Collection",
                category: "mobile",
                price: 1599,
                image: "https://images.unsplash.com/photo-1609081219090-a6d81bd3085f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8cGhvbmUlMjBjYXNlfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60"
            },
            {
                id: 8,
                name: "Essential Oil Diffuser",
                category: "home",
                price: 3999,
                image: "https://images.unsplash.com/photo-1603481546238-487240151dc8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8b2lsJTIwZGlmZnVzZXJ8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
            }
        ];

        // DOM elements
        const productsContainer = document.getElementById('productsContainer');
        const adminProductsList = document.getElementById('adminProductsList');
        const adminPanel = document.getElementById('adminPanel');
        const adminToggle = document.getElementById('adminToggle');
        const closeAdmin = document.getElementById('closeAdmin');
        const addProductForm = document.getElementById('addProductForm');

        // Render products on the page
        function renderProducts() {
            productsContainer.innerHTML = '';
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card bg-white';
                productCard.innerHTML = `
                    <div class="h-48 overflow-hidden">
                        <img src="${product.image}" alt="${product.name}" class="w-full h-full object-cover">
                    </div>
                    <div class="p-4">
                        <div class="flex justify-between items-start mb-2">
                            <h3 class="font-medium">${product.name}</h3>
                            <span class="bg-primary text-white text-xs px-2 py-1 rounded-full">${product.category}</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <p class="text-lg font-bold text-primary">PKR ${product.price.toLocaleString()}</p>
                            <button class="bg-light w-8 h-8 rounded-full flex items-center justify-center hover:bg-primary hover:text-white transition">
                                <i class="fas fa-shopping-cart"></i>
                            </button>
                        </div>
                    </div>
                `;
                productsContainer.appendChild(productCard);
            });
        }

        // Render products in admin panel
        function renderAdminProducts() {
            adminProductsList.innerHTML = '';
            products.forEach(product => {
                const productItem = document.createElement('div');
                productItem.className = 'bg-gray-50 p-4 rounded-lg';
                productItem.innerHTML = `
                    <div class="flex justify-between items-start">
                        <div class="flex items-center space-x-3">
                            <img src="${product.image}" alt="${product.name}" class="w-12 h-12 object-cover rounded">
                            <div>
                                <h4 class="font-medium">${product.name}</h4>
                                <p class="text-sm text-gray-600">$${product.price.toFixed(2)} • ${product.category}</p>
                            </div>
                        </div>
                        <button class="text-red-500 delete-product" data-id="${product.id}">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
                adminProductsList.appendChild(productItem);
            });
            
            // Add event listeners to delete buttons
            document.querySelectorAll('.delete-product').forEach(button => {
                button.addEventListener('click', function() {
                    const productId = parseInt(this.getAttribute('data-id'));
                    deleteProduct(productId);
                });
            });
        }

        // Add new product
        function addProduct(e) {
            e.preventDefault();
            
            const name = document.getElementById('productName').value;
            const category = document.getElementById('productCategory').value;
            const price = parseFloat(document.getElementById('productPrice').value);
            const image = document.getElementById('productImage').value;
            
            const newProduct = {
                id: products.length > 0 ? Math.max(...products.map(p => p.id)) + 1 : 1,
                name,
                category,
                price,
                image
            };
            
            products.push(newProduct);
            renderProducts();
            renderAdminProducts();
            addProductForm.reset();
            
            // Show success message
            alert('Product added successfully!');
        }

        // Delete product
        function deleteProduct(id) {
            if (confirm('Are you sure you want to delete this product?')) {
                products = products.filter(product => product.id !== id);
                renderProducts();
                renderAdminProducts();
            }
        }

        // Toggle admin panel
        adminToggle.addEventListener('click', () => {
            adminPanel.classList.toggle('translate-x-full');
        });

        closeAdmin.addEventListener('click', () => {
            adminPanel.classList.add('translate-x-full');
        });

        // Event listeners
        addProductForm.addEventListener('submit', addProduct);

        // Initialize the page
        document.addEventListener('DOMContentLoaded', () => {
            renderProducts();
            renderAdminProducts();
        });
    </script>
</body>
